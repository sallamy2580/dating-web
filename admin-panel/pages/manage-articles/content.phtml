    function Wo_DeleteArticle(id,thumbnail) {
        if (id == '') {
            return false;
        }
        if (!confirm('Are you sure you want to delete this Article?')) {
            return false;
        }
        var hash_id = '<?php echo Wo_CreateSession();?>';
        $('#' + id).fadeOut(300, function () {
            $(this).remove();
        });
        $.get(Wo_Ajax_Requests_File(), {f: 'admin_setting', s:'delete_blog_article', id:id, p: 'manage-articles', thumbnail:thumbnail, hash_id: hash_id});
    }
</script>